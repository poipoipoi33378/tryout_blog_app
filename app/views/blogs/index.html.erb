<%= provide(:title,"Blogs") %>

<div class="row">
  <section>
    <h1>Listing blogs</h1>

    <%= will_paginate %>

    <table class="table table-striped">
      <thead>
      <tr>
        <th>Title</th>
        <th>User</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
      </thead>
      <tbody>
      <% @blogs.each do |blog| %>
        <tr>
          <td><%= blog.title %></td>
          <td><%= link_to blog.user.name,blog.user %></td>
          <td><%= link_to 'Show',blog_path(blog) %></td>
          <td><%= link_to 'Edit',edit_blog_path(blog) %></td>
          <td><%= link_to 'Destroy',blog,method: :delete ,data:{ confirm: "You sure?"} %></td>
        </tr>
      <% end %>
      </tbody>
    </table>

    <%= will_paginate %>

  </section>
  <nav>
    <%= link_to 'New Blog',new_blog_path,class: "btn btn-primary" %>
  </nav>
</div>


